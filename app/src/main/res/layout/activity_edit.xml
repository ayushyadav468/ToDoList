<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editActivityLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.ayushyadav.todolist.EditActivity">

    <EditText
        android:id="@+id/editActivityEditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Item Name"
        android:inputType="text"
        android:layout_marginVertical="150dp"/>

    <EditView
        android:id="@+id/editActivityEditText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Any Detail"
        android:inputType="text"
        android:layout_marginTop="200dp" />

    <Button
        android:id="@+id/editActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/editActivityEditText2"
        android:layout_marginTop="48dp" />

</RelativeLayout>
